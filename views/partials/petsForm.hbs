<form action="/addPet" method="POST" enctype="multipart/form-data">
    <div id="petForm" class="petForm">
        <div class="row">
            <div class="col s12">
                <h3 class="formTitles">Pet Name</h3>
                <input type="text" id="petName" name="petName" placeholder="Monty">
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <div class="input-field" id="BreedPetForm">
                    <h3 class="formTitles">Breed</h3>
                    <input placeholder="German Shepard" name="breed" id="breed" type="text">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s3">
                <div id="CategoryPetForm">
                    <h3 class="formTitles" for="category">Category</h3>
                    <p>
                        <label>
                            <input class="with-gap" id="Dog" name="category" type="radio" value="dog" checked />
                            <span>Dog</span>
                        </label>
                    </p>
                    <p>
                        <label>
                            <input class="with-gap" id="Cat" name="category" type="radio" value="cat" />
                            <span>Cat</span>
                        </label>
                    </p>
                    <p>
                        <label>
                            <input class="with-gap" id="Equine" name="category" type="radio" value="equine" />
                            <span>Equine</span>
                        </label>
                    </p>
                    <p>
                        <label>
                            <input class="with-gap" id="Other" name="category" type="radio" value="other" />
                            <span>Other</span>
                        </label>
                    </p>
                </div>

            </div>
            <div class="col s6">

                <div id="sexPetForm">
                    <h3 class="formTitles" for="sex">Sex</h3>
                    <p>
                        <label>
                            <input class="with-gap" id="male" name="sex" type="radio" value="male" checked />
                            <span>Male</span>
                        </label>
                    </p>
                    <p>
                        <label>
                            <input class="with-gap" id="female" name="sex" type="radio" value="female" />
                            <span>Female</span>
                        </label>
                    </p>
                </div>
            </div>
            <div class="col s3">
                <div class="input-field" id="AgePetForm">
                    <h3 class="formTitles" for="age">Age (in years)</h3>
                    <input placeholder="4" name="age" id="age" type="text">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s6">
                <h3 class="formTitles">Up for adoption?</h3>
                <div class="switch petFormSwitch">
                    <label>
                        No
                        <input name="adoptable" type="checkbox" value="true">
                        <span class="lever"></span>
                        Yes
                    </label>
                </div>
            </div>
            <div class="col s6">
                <h3 class="formTitles">Description</h3>
                <div class="input-field col s12">
                    <textarea id="description" name="description" placeholder="Description"
                        class="materialize-textarea"></textarea>
                </div>
            </div>

        </div>
    </div>
    <div class="row">
        
        <div class="col s6">
            <h3 class="formTitles">Hypoallergenic?</h3>
            <div class="switch petFormSwitch" id="hypoPetForm">
                <label>
                    No
                    <input name="hypo" type="checkbox" value="true">
                    <span class="lever" id="hypoSwitch"></span>
                    Yes
                </label>
            </div>
        </div>
        <div class="col 6">
            <div id="SizePetForm">
                <h3 class="formTitles">Size</h3>
                <p>
                    <label>
                        <input class="with-gap" name="size" id="small" value="small" type="radio" checked />
                        <span>small</span>
                    </label>
                </p>
                <p>
                    <label>
                        <input class="with-gap" name="size" id="medium" value="medium" type="radio" />
                        <span>medium</span>
                    </label>
                </p>
                <p>
                    <label>
                        <input class="with-gap" name="size" id="large" value="large" type="radio" />
                        <span>large</span>
                    </label>
                </p>
            </div>
        </div>
    </div>
    <div class="input-field">
        <h3 class="formTitles">Image Upload</h3>
        <input type="text" id="title" name="title" placeholder="Image Title" required>
    </div>
    <div class="input-field">
        <input type="text" id="comment" name="comment" placeholder="Image Comment" required>
    </div>
    <div class="file-field input-field">
        <div class="btn">
            <span>File</span>
            <input type="file" id="image" name="images" multiple>
        </div>
        <div class="file-path-wrapper">
            <input class="file-path validate" type="text" placeholder="Upload one or more files">
        </div>
    </div>
    <input type="submit" value="submit" class="btn">
</form>